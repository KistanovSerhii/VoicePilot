<Window x:Class="VoicePilot.App.Windows.DictationSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройки диктовки"
        Height="260"
        Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Icon="pack://application:,,,/wavesound.png">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical">
            <TextBlock Text="Параметры режима голосового ввода"
                       FontSize="16"
                       FontWeight="SemiBold" />
            <TextBlock Text="Укажите лимиты для автоматического выхода из режима."
                       Margin="0,6,0,0"
                       Foreground="#4B5563" />
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,16,0,16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="160" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="Максимум символов"
                       VerticalAlignment="Center"
                       Margin="0,0,12,12" />
            <TextBox Grid.Column="1"
                     Text="{Binding MaxCharactersText, UpdateSourceTrigger=PropertyChanged}"
                     VerticalContentAlignment="Center"
                     Padding="6"
                     Margin="0,0,0,12" />

            <TextBlock Grid.Row="1"
                       Text="Таймаут молчания (сек.)"
                       VerticalAlignment="Center"
                       Margin="0,0,12,12" />
            <TextBox Grid.Row="1"
                     Grid.Column="1"
                     Text="{Binding SilenceTimeoutText, UpdateSourceTrigger=PropertyChanged}"
                     VerticalContentAlignment="Center"
                     Padding="6"
                     Margin="0,0,0,12" />

            <TextBlock Grid.Row="2"
                       Grid.ColumnSpan="2"
                       Text="{Binding ErrorMessage}"
                       Foreground="#C53030"
                       Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}"
                       TextWrapping="Wrap" />
        </Grid>

        <DockPanel Grid.Row="2" LastChildFill="False">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                <Button Content="Сбросить"
                        Margin="0,0,8,0"
                        Padding="14,6"
                        Command="{Binding ResetCommand}" />
                <Button Content="Отмена"
                        Margin="0,0,8,0"
                        Padding="14,6"
                        Command="{Binding CancelCommand}" />
                <Button Content="Сохранить"
                        Padding="16,6"
                        Command="{Binding SaveCommand}" />
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
