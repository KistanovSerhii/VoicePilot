<Window x:Class="VoicePilot.App.Windows.SystemCommandSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Системные команды"
        Height="340"
        Width="620"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Icon="pack://application:,,,/wavesound.png">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Укажите фразы для системных команд (по одной на строку)."
                   FontSize="14"
                   Foreground="#4B5563" />

        <Grid Grid.Row="1"
              Margin="0,16,0,16">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="160" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="Активация"
                       FontWeight="SemiBold"
                       VerticalAlignment="Top"
                       Margin="0,0,12,0" />
            <TextBox Grid.Column="1"
                     Text="{Binding ActivationText, UpdateSourceTrigger=PropertyChanged}"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     Padding="6" />

            <TextBlock Grid.Row="1"
                       Text="Режим тишины"
                       FontWeight="SemiBold"
                       Margin="0,8,12,0"
                       VerticalAlignment="Top" />
            <TextBox Grid.Row="1"
                     Grid.Column="1"
                     Text="{Binding SilenceText, UpdateSourceTrigger=PropertyChanged}"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     Padding="6" />

            <TextBlock Grid.Row="2"
                       Text="Завершение"
                       FontWeight="SemiBold"
                       Margin="0,8,12,0"
                       VerticalAlignment="Top" />
            <TextBox Grid.Row="2"
                     Grid.Column="1"
                     Text="{Binding ExitText, UpdateSourceTrigger=PropertyChanged}"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     Padding="6" />
        </Grid>

        <DockPanel Grid.Row="2"
                   Margin="0,0,0,4"
                   LastChildFill="False">
            <StackPanel Orientation="Horizontal"
                        DockPanel.Dock="Right">
                <Button Content="Сбросить"
                        Margin="0,0,8,0"
                        Padding="14,6"
                        Command="{Binding ResetCommand}" />
                <Button Content="Отмена"
                        Margin="0,0,8,0"
                        Padding="14,6"
                        Command="{Binding CancelCommand}" />
                <Button Content="Сохранить"
                        Padding="16,6"
                        Command="{Binding SaveCommand}" />
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
