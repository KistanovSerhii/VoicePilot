<Window x:Class="VoicePilot.App.Windows.ResourceManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ресурсы"
        Height="480"
        Width="720"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanMinimize"
        Icon="pack://application:,,,/wavesound.png">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <GroupBox Header="Пути и ресурсы" FontSize="16">
            <DataGrid ItemsSource="{Binding Resources}"
                      SelectedItem="{Binding SelectedResource, Mode=TwoWay}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      Margin="0"
                      IsReadOnly="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Ключ" Binding="{Binding Key, UpdateSourceTrigger=PropertyChanged}" Width="1.5*" />
                    <DataGridTextColumn Header="Путь" Binding="{Binding Path, UpdateSourceTrigger=PropertyChanged}" Width="3*" />
                    <DataGridTextColumn Header="Тип" Binding="{Binding Type, UpdateSourceTrigger=PropertyChanged}" Width="*" />
                    <DataGridTextColumn Header="Описание" Binding="{Binding Description, UpdateSourceTrigger=PropertyChanged}" Width="2*" />
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button Content="Добавить" Padding="16,6" Margin="0,0,8,0" Command="{Binding AddCommand}" />
            <Button Content="Удалить" Padding="16,6" Margin="0,0,8,0" Command="{Binding RemoveCommand}" />
            <Button Content="Выбрать путь" Padding="16,6" Margin="0,0,8,0" Command="{Binding BrowsePathCommand}" />
            <Button Content="Сбросить" Padding="16,6" Margin="0,0,8,0" Command="{Binding ResetCommand}" />
            <Button Content="Отмена" Padding="16,6" Margin="0,0,8,0" Command="{Binding CancelCommand}" />
            <Button Content="Сохранить" Padding="18,6" Command="{Binding SaveCommand}" />
        </StackPanel>
    </Grid>
</Window>
